<center><h1>New User Detail</h1></center>
<%= form_tag :action => 'step1', :controller => 'user' do |f| %>
  <div class="form-horizontal">
  <div class="form-group">
  <%= label_tag(:Name,nil, class: 'col-sm-5 control-label') %>
  <div class="col-sm-2">
  <%= text_field_tag :name,nil, class: 'form-control', id: 'name', placeholder: 'enter your name' %>
  </div>
  </div>
  <div class="form-group">
  <%= label_tag :Email,nil, class: 'col-sm-5 control-label'  %>
  <div class="col-sm-2">
  <%= text_field_tag :email,nil, class: 'form-control', id: 'email', placeholder: 'example@mail.com'   %>
  </div>
  </div>
  <div class="form-group">
  <%= label_tag :Phone,nil, :class => "col-sm-5 control-label"  %>
  <div class="col-sm-2">
  <%= text_field_tag :phone,nil, :class => "form-control", :id => "phone",  :placeholder => "Enter your phone no" %>
  </div>
  </div>
  <div class="form-group">
  <%= label_tag :City,nil, :class => "col-sm-5 control-label"  %>
  <div class="col-sm-2">
  <%= text_field_tag :city,nil, :class => "form-control", :id => "city",  :placeholder => "Enter your city" %>
  </div>
  </div>
  <div class="form-group">
  <%= label_tag :Country,nil, :class => "col-sm-5 control-label" %>
  <div class="col-sm-2">
  <%= text_field_tag :country,nil, :class => "form-control", :id => "country",  :placeholder => "Enter your country"  %>
  </div>
  </div>
</div>  
<div class="form-group"> 
<div class="col-sm-offset-5 col-sm-10"> 
<%= submit_tag "SUBMIT", :class => "btn btn-primary col-sm-1" %>  
</div> 
</div> 
<% end %>